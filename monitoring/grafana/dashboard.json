# ==================== monitoring/grafana/dashboard.json ====================
{
  "dashboard": {
    "id": null,
    "uid": "bot-monitoring",
    "title": "Telegram Bot Monitoring",
    "tags": ["telegram", "bot", "production"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(bot_requests_total[1m])) by (handler)",
            "legendFormat": "{{handler}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sum(rate(bot_errors_total[1m])) by (error_type)",
            "legendFormat": "{{error_type}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Users",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "bot_active_users"
          }
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8},
        "targets": [
          {
            "expr": "sum(rate(bot_cache_hits_total[5m])) / (sum(rate(bot_cache_hits_total[5m])) + sum(rate(bot_cache_misses_total[5m])))"
          }
        ]
      },
      {
        "id": 5,
        "title": "Queue Size",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "bot_queue_size by (queue_name)",
            "legendFormat": "{{queue_name}}"
          }
        ]
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
